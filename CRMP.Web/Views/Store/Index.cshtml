@model IEnumerable<CRMP.Domain.Entities.Store>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/BackLayout.cshtml";
}

<h2 style="color:red;font-size:x-large">Liste des boutiques</h2>
&nbsp;
@*<p>
    @Html.ActionLink("Ajouter nouvelle boutique", "Create")
</p>*@
<table id="datatable" class="table table-striped table-bordered" style="width:210%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.storeImage)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.storeName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.storeaddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Heure_ouverture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Heure_fermeture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.storeNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.storeDesc)
        </th>
        <th>
            Actions
        </th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
    <tr>
        <td>
            @{string path = "~/Content/uploads/" + @item.storeImage;}

            <img src="@Url.Content(path)" width="80" height="80" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.storeName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.storeaddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Heure_ouverture)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Heure_fermeture)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.storeNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.storeDesc)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Edit", new { id = item.StoreId })  |
            @Html.ActionLink("Détails", "Details", new { id = item.StoreId })
            |
            @Html.ActionLink("Supprimer", "Delete", new { id = item.StoreId })
        </td>
    </tr>
        }
    }

    </table>
<a href="@Url.Action("Export","Store")"><i class="fa fa-file-pdf-o"></i> &nbsp; Exporter en PDF</a>